<%- include('../layout/Header') %>
    <%- include('../layout/Navbar') %>

    <div class="add-to-diary">
        <h1>Edit <span class="green-text">DIARY</span></h1>

        <form action="/diary/edit/<%= data.id %>?_method=PUT" method="POST">

            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control"
                id="title" name="title" value="<%= data.title %>">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" 
                cols="30" rows="5"><%= data.description %></textarea>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" class="form-control"
                id="date" name="date">
            </div>

            <input type="submit" value="Update Diary">
        </form>
    </div>

<%- include('../layout/Footer') %>